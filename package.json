{
  "name": "@serialport/bindings-cpp",
  "description": "SerialPort Hardware bindings for node serialport written in c++",
  "version": "0.0.0-development",
  "main": "lib",
  "keywords": [
    "serialport-binding",
    "COM",
    "com port",
    "hardware",
    "iot",
    "modem",
    "serial port",
    "serial",
    "serialport",
    "tty",
    "UART"
  ],
  "dependencies": {
    "@serialport/binding-abstract": "10.0.1",
    "@serialport/parser-readline": "10.0.1",
    "debug": "^4.3.2",
    "node-addon-api": "4.2.0",
    "node-gyp-build": "^4.3.0"
  },
  "devDependencies": {
    "@serialport/binding-mock": "10.0.1",
    "cc": "^3.0.1",
    "chai": "^4.3.4",
    "chai-subset": "^1.6.0",
    "codecov": "^3.8.3",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.1",
    "mocha": "^9.1.3",
    "node-abi": "3.5.0",
    "node-gyp": "^7.1.2",
    "nyc": "^15.1.0",
    "plop": "^2.7.6",
    "prebuildify": "^5.0.0",
    "prebuildify-cross": "^4.0.2",
    "prettier": "^2.4.1",
    "proxyquire": "^2.1.3",
    "semantic-release": "^18.0.1",
    "sinon": "^12.0.1"
  },
  "engines": {
    "node": ">=12.17.0 <13.0 || >=14.0.0"
  },
  "scripts": {
    "install": "node-gyp-build",
    "prebuild": "prebuildify --napi --target 14.0.0 --force --strip --verbose",
    "prebuild-cross": "prebuildify-cross --napi --target 14.0.0 --force --strip --verbose",
    "rebuild": "node-gyp rebuild",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "format": "eslint lib test --fix",
    "lint": "eslint lib test && cc --verbose",
    "test": "nyc --reporter=html --reporter=text --reporter lcovonly mocha",
    "test:arduino": "TEST_PORT=$(./bin/find-arduino.js) npm test",
    "test:watch": "mocha -w",
    "semantic-release": "semantic-release"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "gypfile": true,
  "cc": {
    "filter": [
      "legal/copyright",
      "build/include"
    ],
    "files": [
      "src/*.cpp",
      "src/*.h"
    ],
    "linelength": "120"
  },
  "binary": {
    "napi_versions": [
      6
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/serialport/bindings-cpp.git"
  },
  "funding": "https://opencollective.com/serialport/donate",
  "changelog": {
    "labels": {
      "breaking": ":boom: BREAKING CHANGES :boom:",
      "feature-request": "Features",
      "bug": "Bug Fixes",
      "docs": "Documentation",
      "internal": "Chores"
    }
  }
}
